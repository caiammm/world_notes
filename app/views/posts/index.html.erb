
<div class="banner_principal">
  <li class="header-section">
    <div class="section group">
      <% subjects.each_with_index do |(k, v), index| %>
        <% if index+1 == 5 %>
          <div class="section group">
        <% end %>
        <div class="col span_1_of_4">
          <div class="img_zoom">
            <%= image_tag( image_path("banner/#{index+1}.jpg"), class: 'img_banner') %>
            <div class="img_texto"> <p><%= k.to_s %></p> </div>
          </div>
        </div>
      <% end %>
    </div>
  </li>
</div>
<!-- //BANNER -->

<li class="body-section">

  <!-- TÍTULO -->
  <div align="center"><div class="titulo">Publicações Mais Votadas</div></div>
  <hr class="titulo_linha">

  <!-- TIMELINE -->
  <div class="centralizar_TM">
    <section class="posts">
      <% @posts.each_with_index do |post, index| %>
        <article class="post">
          <a class="post-img" href="#">
            <%= gravatar_for post.user %>
          </a>
          <div class="post-body">
            <div class="text">
              <h1><%= link_to post.title, post_path(post) %></h1>
              <p onclick="document.getElementById('opcoes<%=index+1%>').style.display='none';"> <%= post.content %> </p>
            </div>
            <p class="attribution">por <%= link_to post.user.name, user_path(post.user) %>
              <%= time_message post %></p>
            <% if logged_in? %><!-- logado -->
              <p class="acoes">
                <% if post.user.id == current_user.id %><!-- current user é o dono do post -->
                  <a href="#"><%= image_tag( image_path("icones/comentar.png")) %></a>
                  <a id="button_options" class="button_options<%=index+1%>">
                    <%= image_tag( image_path("icones/opcoes.png")) %>
                  </a>
                  <div class="button_options<%=index+1%>" style="display: none">
                    <div class="section group">
                      <div class="col span_1_of_3">
                        <a href=""><%= image_tag( image_path("icones/editar.png")) %> Editar</a>
                      </div>
                      <div class="col span_1_of_3">
                        <a href=""><%= image_tag( image_path("icones/excluir.png")) %> Excluir</a>
                      </div>
                    </div>
                  </div>
                <% else %> <!-- current_user não é dono do post -->
                  <%= vote_button(post) %>
                  <a id="favorite_options" class="favorite_options<%=index+1%>"><%= image_tag( image_path("icones/favoritar.png")) %></a>
                  <a href="#"><%= image_tag( image_path("icones/comentar.png")) %></a>
                  <%= image_tag( image_path("icones/bloquear.png")) %>
                  <div class="favorite_options<%=index+1%>" style="display: none">
                    <div class="section group">
                      <%= form_for @favorite, url: favorites_path(@favorite), html: { method: :post } do |f| %>

                        <% current_user.folders.each_with_index do |folder, index| %>
                          <div class="col span_1_of_3">
                            <%= radio_button_tag :name, folder.name %>
                            <%= label_tag "name#{folder.name}", folder.name %>
                          </div>
                        <% end %>
                        <div class="col span_1_of_3">
                          <%= radio_button_tag :name, nil %>
                          <%= text_field_tag "new_folder_name" %>
                        </div>
                        <div class="col span_1_of_3">
                          <%= f.submit "Salvar", class: "btn btn-primary" %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </p>
            <% end %> <!-- logado -->
          </div>
        </article><br />
      <% end %>
    </section>​
  </div><!-- // TIMELINE -->
</li> <!-- body-section -->
