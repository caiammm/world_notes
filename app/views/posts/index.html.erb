<li class="header-section">
        <div class="section group">
          <% %w(INFORMÁTICA CULINÁRIA PROFISSÃO AUTOMOTIVOS CONSERTOS GAMES EDUCAÇÃO TECNOLOGIA).each_with_index do |subject, index| %>
          <% if index+1 == 5 %>
            <div class="section group">
          <% end %>
          <div class="col span_1_of_4">
            <div class="img_zoom">
              <%= image_tag( image_path("banner/#{index+1}.jpg"), class: 'img_banner') %>
              <div class="img_texto"> <p><%= subject %></p> </div>
            </div>
          </div>
          <% end %>
        </div>
      </li>
<!-- //BANNER -->

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Tags</th>
      <th>Votes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user_id %></td>
        <td><%= post.tags %></td>
        <td><%= post.votes %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

