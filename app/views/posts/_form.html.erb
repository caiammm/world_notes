<%= form_for @post, url: {action: "create"} do |f| %>
  <% @object = @post %>
  <%= render 'shared/error_messages' %>
  <div class="login_div">
    <%= f.label :title, "Título" %><br />
    <%= f.text_field :title, class: "form_input" %><br /><br />

    <%= f.label :content, "Conteúdo" %><br />
    <%= f.text_area :content, size: '30x10' %><br /><br />
    <!--
    <textarea onkeyup="limitaTextarea(this.value)" id="texto" cols="30" rows="10"></textarea>
    <p><span id="contador">5000</span> CARACTERES RESTANTES</p><br />
     <%= text_area(:notes, cols: 40, rows: 15, :id => "texto") %>
    -->
    <div class="div_check_resp">
      <div class="section group" >
        <% tags.each do |type1, type2| %>
          <div class="col span_1_of_4">
            <%= check_box_tag 'tags_list[]', type1 %><%= f.label type1 %><br />
            <%= check_box_tag 'tags_list[]', type2 %><%= f.label type2 %><br />
          </div>
        <% end %>
      </div>
    </div>
    <%= f.submit "Postar", class: "btn btn-primary" %>
  </div>
<% end %>


